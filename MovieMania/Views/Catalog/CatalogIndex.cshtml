@model IEnumerable<MovieMania.Models.Film>

<div class="container">
    @if ((string)TempData["FilmSuccessMessage"] == "Film was added successfully!")
    {
        <div class="alert alert-success text-center w-100">
            <strong>Film was added successfully!</strong>
        </div>
    }
    else if ((string)TempData["FilmDeleteMessage"] == "Film was deleted successfully!")
    {
        <div class="alert alert-success text-center w-100">
            <strong>Film was deleted successfully!</strong>
        </div>
    }
    else if ((string)TempData["FilmEditMessage"] == "Film was edited successfully!")
    {
        <div class="alert alert-success text-center w-100">
            <strong>Film was edited successfully!</strong>
        </div>
    }

    <div class="row">
        <div class="col">
            <h2 class="text-primary">Films</h2>
        </div>
        <div class="col">
            <form class="form-inline my-2 my-lg-0" method="post" asp-action="Search">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <div class="col text-right">
            <a asp-controller="Catalog" asp-action="Add" class="btn btn-primary">
                Add New Movie
            </a>
        </div>
    </div>

    <div class="row text-center">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    @foreach (var obj in Model)
                    {
                        <div class="col text-center">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="@obj.ImageUrl" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">@obj.Title</h5>
                                    <p class="card-text">@obj.Rating &#11088;</p>
                                    <a href="@obj.TrailerUrl" class="btn btn-primary">Trailer</a>
                                    <a asp-controller="Catalog" asp-route-Id="@obj.FilmId" asp-action="Edit" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Catalog" asp-route-Id="@obj.FilmId" asp-action="Delete" class="btn btn-danger">Delete</a>
                                </div>
                            </div> <br />
                        </div>
                    }
                }
                else
                {
                    <p>No movies to display.</p>
                }
            </div>
        </div>
    </div>
</div>

