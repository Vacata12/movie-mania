                    <h5 class="card-title text-center">"@Model.Title" - @Model.Genre</h5>
                    <p class="text-center">
                        @Model.Description
                        <hr />
                        <div class="text-center">@Model.Rating &#11088;</div>
                    </p>
                    <div class="text-center">
                        <a href="@Model.TrailerUrl" class="btn btn-primary">Trailer</a>
                        <a asp-action="CatalogIndex" class="btn btn-success"><i class="fas fa-sign-out-alt"></i>Back</a>
                    </div>
                </div>
            </div>
        </div>
